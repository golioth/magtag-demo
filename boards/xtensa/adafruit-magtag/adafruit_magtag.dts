/dts-v1/;

#include <espressif/esp32s2.dtsi>
#include <zephyr/dt-bindings/pwm/pwm.h>
#include "adafruit_magtag-pinctrl.dtsi"

/ {
    model = "adafruit_magtag";
    compatible = "adafruit,magtag";

    aliases {
        watchdog0 = &wdt0;
        led0 = &red_led;
        pwm-led0 = &red_pwm_led;
        led-strip = &led_strip;
        sw0 = &button0;
        sw1 = &button1;
        sw2 = &button2;
        sw3 = &button3;
        neopower = &neopower;
        mosi = &mosi;
        sclk = &sclk;
        csel = &csel;
        busy = &busy;
        dc = &dc;
        rst = &rst;
        activate = &active;
        sound = &sound;
    };

    chosen {
        zephyr,sram = &sram0;
        zephyr,console = &uart0;
        zephyr,shell-uart = &uart0;
        zephyr,flash = &flash0;
    };

    leds {
        compatible = "gpio-leds";
        red_led: led_0 {
            gpios =  <&gpio0 13 GPIO_ACTIVE_HIGH>;
        };
        neopower: neo_power {
            gpios = <&gpio0 21 GPIO_ACTIVE_HIGH>;
        };
        mosi: mosi_p {
            gpios = <&gpio1 3 GPIO_ACTIVE_HIGH>;
        };
        sclk: sclk_p {
            gpios = <&gpio1 4 GPIO_ACTIVE_HIGH>;
        };
        csel: csel_p {
            gpios = <&gpio0 8 GPIO_ACTIVE_HIGH>;
        };
        dc: dc_pin {
            gpios = <&gpio0 7 GPIO_ACTIVE_HIGH>;
        };
        rst: reset {
            gpios = <&gpio0 6 GPIO_ACTIVE_HIGH>;
        };
        active: active_pin {
            gpios = <&gpio0 16 GPIO_ACTIVE_HIGH>;
            label = "Activate speaker";
        };
        sound: sound_pin {
            gpios = <&gpio0 17 GPIO_ACTIVE_HIGH>;
            label = "Drive speaker";
        };
    };

    pwmleds {
        compatible = "pwm-leds";
        red_pwm_led: pwm_led_0 {
            pwms = <&ledc0 0 PWM_HZ(100) PWM_POLARITY_NORMAL>;
        };
    };

    gpio_keys {
        compatible = "gpio-keys";
        busy: busy_pin {
            gpios = <&gpio0 5 GPIO_ACTIVE_HIGH>;
        };
        button0: button_0 {
            gpios = <&gpio0 11 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
        };
        button1: button_1 {
            gpios = <&gpio0 12 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
        };
        button2: button_2 {
            gpios = <&gpio0 14 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
        };
        button3: button_3 {
            gpios = <&gpio0 15 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;
        };
    };
};

&cpu0 {
    clock-frequency = <ESP32_CLK_CPU_240M>;
};

&uart0 {
    pinctrl-0 = <&uart0_default>;
    pinctrl-names = "default";
    status = "okay";
    current-speed = <115200>;
};

&i2c1 {
    pinctrl-0 = <&i2c1_default>;
    pinctrl-names = "default";
    status = "okay";
    clock-frequency = <I2C_BITRATE_STANDARD>;

    lis3dh@19 {
            compatible = "st,lis2dh";
            reg = <0x19>;
    };
};

&spi2 {
    pinctrl-0 = <&spim2_default>;
    pinctrl-names = "default";
    status = "okay";
    #address-cells = <1>;
    #size-cells = <0>;

    led_strip: ws2812@0 {
        compatible = "worldsemi,ws2812-spi";

        /* SPI */
        reg = <0>; /* ignored, but necessary for SPI bindings */
        spi-max-frequency = <8750000>;

        /* WS2812 */
        chain-length = <4>; /* arbitrary; change at will */
        spi-one-frame = <0xF8>;
        spi-zero-frame = <0xE0>;
        color-mapping = <2 1 3>;
    };
};

&ledc0 {
    pinctrl-0 = <&ledc0_default>;
    pinctrl-names = "default";
    status = "okay";
    #address-cells = <1>;
    #size-cells = <0>;

    channel0@0 {
        reg = <0x0>;
        timer = <0>;
    };
};

&gpio0 {
    status = "okay";
};

&gpio1 {
    status = "okay";
};

&trng0 {
    status = "okay";
};

&wdt0 {
    status = "okay";
};

&flash0 {
    status = "okay";
    partitions {
        compatible = "fixed-partitions";
        #address-cells = <1>;
        #size-cells = <1>;

        /* Reserve 60kB for the bootloader */
        boot_partition: partition@1000 {
            reg = <0x00001000 0x0000F000>;
            read-only;
        };

        /* Reserve 1024kB for the application in slot 0 */
        slot0_partition: partition@10000 {
            reg = <0x00010000 0x00100000>;
        };

        /* Reserve 1024kB for the application in slot 1 */
        slot1_partition: partition@110000 {
            reg = <0x00110000 0x00100000>;
        };

        /* Reserve 256kB for the scratch partition */
        scratch_partition: partition@210000 {
            reg = <0x00210000 0x00040000>;
        };

        storage_partition: partition@250000 {
            reg = <0x00250000 0x00006000>;
        };
    };
};
